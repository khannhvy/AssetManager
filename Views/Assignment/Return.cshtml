@model List<AssetManager.Models.AssetAssignmentViewModel>
@{
    ViewData["Title"] = "Tài sản đang được sử dụng";
}

<h2 class="mb-4 text-info">Tài sản đang được sử dụng</h2>

<table class="table table-hover table-bordered">
    <thead class="table-light">
        <tr>
            <th>Mã tài sản</th>
            <th>Tên tài sản</th>
            <th>Người nhận</th>
            <th>Ngày giao</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var asset in Model)
        {
            <tr>
                <td>@asset.AssetCode</td>
                <td>@asset.AssetName</td>
                <td>@asset.AssigneeName</td>
                <td>@asset.AssignedDate.ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>

@{
    ViewData["Title"] = "Nhận lại tài sản";
}

<h2 class="mb-4 text-success">Nhận lại tài sản</h2>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Tài sản</th>
            <th>Người đang sử dụng</th>
            <th>Ngày giao</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AssetName</td>
                <td>@item.AssigneeName</td>
                <td>@item.AssignedDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <form asp-action="Return" method="post">
                        <input type="hidden" name="AssignmentId" value="@item.Id" />
                        <button type="submit" class="btn btn-warning btn-sm">Xác nhận trả</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

