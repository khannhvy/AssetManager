     <!-- t√¨m email,ten,iduer -->
    <script>
        $(document).ready(function () {
            const $input = $('#userSearchInput');
            const $dropdown = $('#userDropdown');
            const $assigneeId = $('#AssigneeId');
            const $info = $('#selectedUserInfo');

            $input.on('input', function () {
                const keyword = $(this).val().trim();
                $dropdown.empty().hide();
                $assigneeId.val('');
                $info.hide();

                if (keyword.length < 2) return;

                // G·ªçi API t√¨m theo t·∫•t c·∫£: name, email, IdUser
                $.get(`/api/users/search?q=${keyword}`)
                    .done(function (users) {
                        $dropdown.empty();  

                        if (!users || users.length === 0) {
                            $dropdown.append(`<div class="list-group-item disabled">Kh√¥ng t√¨m th·∫•y</div>`).show();
                            return;
                        }

                        users.forEach(user => {
                            const item = $(`<button type="button" class="list-group-item list-group-item-action">${user.name} (${user.email})</button>`);
                            item.on('click', function () {
                                $input.val(`${user.name} (${user.email})`);
                                $assigneeId.val(user.id);
                                 $('#AssigneeName').val(user.name); 
                                 $('#AssignedById').val('@User.Identity?.Name');
                                $dropdown.empty().hide();
                                @* $info.text(` ƒê√£ ch·ªçn: ${user.name} (${user.email})`).show(); *@
                            });
                            $dropdown.append(item);
                        });

                        $dropdown.show();
                    })
                    .fail(function () {
                        $dropdown.empty();
                        $dropdown.append(`<div class="list-group-item disabled">Kh√¥ng t√¨m th·∫•y</div>`).show();
                    });
            });

            $(document).on('click', function (e) {
                if (!$(e.target).closest('#userSearchInput, #userDropdown').length) {
                    $dropdown.hide();
                }
            });
        });
    </script>
}

