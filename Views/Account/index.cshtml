@model List<AssetManager.Models.User>

@{
    ViewData["Title"] = "Danh sách người dùng";
}

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">Danh sách người dùng</h2>

    <table class="table table-bordered table-striped shadow-sm">
        <thead class="table-dark text-center">
            <tr>
                <th>#</th>
                <th>Id User</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Vai trò</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">Không có người dùng nào</td>
                </tr>
            }
            else
            {
                int index = 1;
                foreach (var user in Model)
                {
                    <tr>
                        <td class="text-center">@index</td>
                        <td>@user.IdUser</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                    </tr>
                    index++;
                }
            }
        </tbody>
    </table>
</div>
